# =====================================================
# Sistema Sorveteria - Environment Variables
# =====================================================
# Copy this file to .env and update values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DB_USER=gelatini
DB_PASSWORD=gelatini123
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gelatini_db
DATABASE_URL=postgresql://gelatini:gelatini123@postgres:5432/gelatini_db?schema=public

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =====================================================
# BACKEND CONFIGURATION
# =====================================================
NODE_ENV=development
API_PORT=3000
API_HOST=0.0.0.0
LOG_LEVEL=debug

# API Keys (optional)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================
VITE_API_URL=http://backend:3000/api/v1
VITE_APP_NAME=Sistema Sorveteria

# =====================================================
# DOCKER CONFIGURATION
# =====================================================
COMPOSE_PROJECT_NAME=gelatini
DOCKER_BUILDKIT=1

# =====================================================
# LOGGING
# =====================================================
LOG_FORMAT=json
LOG_LEVEL=info

# =====================================================
# SECURITY
# =====================================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# =====================================================
# MAIL (Optional - if using email features)
# =====================================================
MAIL_FROM=noreply@sorveteria.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# =====================================================
# MONITORING (Optional)
# =====================================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# =====================================================
# Feature Flags
# =====================================================
FEATURE_LOYALTY=true
FEATURE_COUPONS=true
FEATURE_REPORTS=true
FEATURE_CASHBACK=true
