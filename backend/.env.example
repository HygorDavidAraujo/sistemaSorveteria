# Environment
NODE_ENV=development

# Server
PORT=3000
API_PREFIX=/api/v1

# Database
DATABASE_URL="postgresql://gelatini:gelatini123@localhost:5433/gelatini_db?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Scale Integration (Toledo Prix 3 Fit)
SCALE_ENABLED=false
SCALE_MANUFACTURER=TOLEDO
SCALE_MODEL="PRIX 3 FIT"
SCALE_PROTOCOL=toledo_prix
SCALE_PORT=COM3
SCALE_BAUDRATE=9600
SCALE_DATABITS=8
SCALE_STOPBITS=1
SCALE_PARITY=none
SCALE_STABLE_ONLY=true
SCALE_READ_TIMEOUT_MS=1500
SCALE_REQUEST_COMMAND=
# Optional mock weight (kg)
SCALE_MOCK_WEIGHT_KG=0.500
# Optional proxy for Docker (host scale agent)
SCALE_PROXY_URL=
# Allow mock fallback when serial is not available
SCALE_ALLOW_MOCK_ON_ERROR=true
